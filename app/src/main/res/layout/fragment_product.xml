<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="@dimen/space"
        tools:context=".ui.home.ProductFragment">

        <TextView
            android:id="@+id/title_product"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/title"
            android:layout_marginTop="@dimen/space"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/space_twice"
            style="@style/TextAppearance.AppCompat.Headline"
            />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:scaleType="centerCrop"
            android:layout_marginBottom="@dimen/space"
            android:src="@drawable/ic_pizza"
            android:contentDescription="@string/image" />

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:layout_marginBottom="@dimen/space"
            >

            <LinearLayout
                android:orientation="vertical"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:padding="@dimen/space_half"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/ingredients"
                    android:layout_marginBottom="@dimen/space_half"
                    android:textAlignment="center"
                    android:layout_gravity="center_horizontal"
                    style="@style/TextAppearance.AppCompat.Subhead"
                    />

                <LinearLayout
                    android:id="@+id/container"
                    android:orientation="vertical"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    >

                </LinearLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_marginBottom="@dimen/space"
            >
            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:padding="@dimen/space_half"
                >
                <TextView
                    android:id="@+id/descr"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/dummy_text"
                    android:paddingLeft="@dimen/space_half"
                    android:paddingRight="@dimen/space_half"
                    android:paddingTop="@dimen/space_half"
                    android:textAppearance="?attr/textAppearanceBody2"
                    />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:id="@+id/btnActionLayout"
            >
            <Button
                android:id="@+id/order_a_product"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/order"
                style="@style/OrangeButton"
                />
        </LinearLayout>
    </LinearLayout>
</ScrollView>